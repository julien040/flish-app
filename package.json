{
  "name": "flish-app",
  "version": "1.0.0",
  "description": "Flish, a search bar for power users",
  "productName": "Flish",
  "build": {
    "appId": "dev.flish.app",
    "copyright": "Copyright (c) 2022 Julien CAGNIART",
    "productName": "Flish",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "default",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "default",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run build && electron ./out/main.js",
    "electron": "electron ./out/main.js",
    "compile": "npm run build && electron-packager . --icons assets/Flish-Logo128.png --overwrite",
    "mac-build": "electron-builder build --mac",
    "windows-build": "electron-builder build --win"
  },
  "repository": "https://github.com/julien040/flish-app",
  "keywords": [
    "electron",
    "flish"
  ],
  "main": "./out/main.js",
  "author": "Julien040",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/node": "^18.7.13",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "electron": "^23.1.4",
    "electron-builder": "^23.0.3",
    "electron-packager": "^15.5.1",
    "eslint": "^7.32.0",
    "typescript": "^4.8.2"
  },
  "dependencies": {
    "@sentry/electron": "^3.0.5",
    "appdata-path": "^1.0.0",
    "axios": "^0.27.2",
    "electron-log": "^4.4.6",
    "electron-store": "^8.0.1",
    "electron-updater": "^5.0.1",
    "keytar": "^7.9.0",
    "nanoid": "^4.0.0",
    "node-machine-id": "^1.1.12",
    "posthog-node": "^1.3.0",
    "unzipper": "^0.10.11",
    "winston": "^3.7.2",
    "winston-daily-rotate-file": "^4.6.1"
  }
}
